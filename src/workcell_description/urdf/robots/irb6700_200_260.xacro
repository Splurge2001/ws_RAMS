<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- include common materials -->
  <xacro:include filename="../materials/common_materials.xacro"/>

<xacro:macro name="irb6700_200_260"
             params="prefix mesh_scale_visual:='1 1 1' mesh_scale_collision:='1 1 1'">
    <!-- === link list === -->
    <link name="${prefix}base_link">
      <inertial>
        <mass value="100.0"/>
        <origin xyz="0 0 0.2"/>
        <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://workcell_description/meshes/robots/visual/base_link.stl" scale="${mesh_scale_visual}"/>
        </geometry>
        <xacro:material_abb_white/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://workcell_description/meshes/robots/collision/base_link.stl" scale="${mesh_scale_collision}"/>
        </geometry>
        <xacro:material_abb_yellow/>
      </collision>
    </link>

    <!-- Each link below now contains inertial placeholders -->
    <xacro:macro name="irb6700_link" params="name mass ixx iyy izz">
      <link name="${prefix}${name}">
        <inertial>
          <mass value="${mass}"/>
          <origin xyz="0 0 0.1"/>
          <inertia ixx="${ixx}" ixy="0" ixz="0" iyy="${iyy}" iyz="0" izz="${izz}"/>
        </inertial>
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://workcell_description/meshes/robots/visual/${name}.stl" scale="${mesh_scale_visual}"/>
          </geometry>
          <xacro:material_abb_white/>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="package://workcell_description/meshes/robots/collision/${name}.stl" scale="${mesh_scale_collision}"/>
          </geometry>
          <xacro:material_abb_yellow/>
        </collision>
      </link>
    </xacro:macro>

    <xacro:irb6700_link name="link_1" mass="30.0" ixx="0.5" iyy="0.5" izz="0.5"/>
    <xacro:irb6700_link name="link_2" mass="35.0" ixx="0.6" iyy="0.6" izz="0.6"/>
    <xacro:irb6700_link name="link_3" mass="25.0" ixx="0.4" iyy="0.4" izz="0.4"/>
    <xacro:irb6700_link name="link_4" mass="20.0" ixx="0.3" iyy="0.3" izz="0.3"/>
    <xacro:irb6700_link name="link_5" mass="15.0" ixx="0.2" iyy="0.2" izz="0.2"/>
    <xacro:irb6700_link name="link_6" mass="10.0" ixx="0.1" iyy="0.1" izz="0.1"/>
    <xacro:irb6700_link name="cylinder" mass="5.0" ixx="0.05" iyy="0.05" izz="0.05"/>
    <xacro:irb6700_link name="piston" mass="3.0" ixx="0.03" iyy="0.03" izz="0.03"/>

    <!-- Add dynamics to joints -->
    <xacro:macro name="joint_dynamics" params="damping friction">
      <dynamics damping="${damping}" friction="${friction}"/>
    </xacro:macro>

    <!-- === joint list === -->
    <joint name="${prefix}joint_1" type="revolute">
      <origin xyz="0 0 0.78" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child  link="${prefix}link_1"/>
      <axis  xyz="0 0 1"/>
      <limit lower="-2.967" upper="2.967" effort="1000" velocity="1.919"/>
      <xacro:joint_dynamics damping="10.0" friction="1.0"/>
    </joint>

    <joint name="${prefix}joint_2" type="revolute">
      <origin xyz="0.32 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_1"/>
      <child  link="${prefix}link_2"/>
      <axis  xyz="0 1 0"/>
      <limit lower="-1.134" upper="1.483" effort="1000" velocity="1.919"/>
      <xacro:joint_dynamics damping="10.0" friction="1.0"/>
    </joint>

    <joint name="${prefix}joint_3" type="revolute">
      <origin xyz="0 0 1.125" rpy="0 0 0"/>
      <parent link="${prefix}link_2"/>
      <child  link="${prefix}link_3"/>
      <axis  xyz="0 1 0"/>
      <limit lower="-3.142" upper="1.221" effort="1000" velocity="1.919"/>
      <xacro:joint_dynamics damping="10.0" friction="1.0"/>
    </joint>

    <joint name="${prefix}joint_4" type="revolute">
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <parent link="${prefix}link_3"/>
      <child  link="${prefix}link_4"/>
      <axis  xyz="1 0 0"/>
      <limit lower="-5.235" upper="5.235" effort="1000" velocity="3.316"/>
      <xacro:joint_dynamics damping="10.0" friction="1.0"/>
    </joint>

    <joint name="${prefix}joint_5" type="revolute">
      <origin xyz="1.1425 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_4"/>
      <child  link="${prefix}link_5"/>
      <axis  xyz="0 1 0"/>
      <limit lower="-2.268" upper="2.268" effort="1000" velocity="2.618"/>
      <xacro:joint_dynamics damping="10.0" friction="1.0"/>
    </joint>

    <joint name="${prefix}joint_6" type="revolute">
      <origin xyz="0.2 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_5"/>
      <child  link="${prefix}link_6"/>
      <axis  xyz="1 0 0"/>
      <limit lower="-6.283" upper="6.283" effort="1000" velocity="3.665"/>
      <xacro:joint_dynamics damping="10.0" friction="1.0"/>
    </joint>

    <joint name="${prefix}cylinder_joint" type="revolute">
      <origin xyz="-0.349 -0.194 -0.142" rpy="0 0 0" />
      <parent link="${prefix}link_1" />
      <child link="${prefix}cylinder" />
      <axis xyz="0 1 0" />
      <mimic joint="${prefix}joint_2" multiplier="-0.25"/>
      <limit lower="-0.284" upper="0.371" effort="100" velocity="1.0"/>
    </joint>

    <joint name="${prefix}piston_joint" type="prismatic">
      <origin xyz="0 0 0" rpy="0.20897 0 -1.5708" />
      <parent link="${prefix}cylinder" />
      <child link="${prefix}piston" />
      <axis xyz="0 1 0" />
      <mimic joint="${prefix}joint_2" multiplier="0.15"/>
      <limit lower="-0.25" upper="0.25" effort="100" velocity="1.0" />
    </joint>

    <link name="${prefix}base"/>
    <joint name="${prefix}base_link-base" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child  link="${prefix}base"/>
    </joint>

    <link name="${prefix}flange"/>
    <joint name="${prefix}joint_6-flange" type="fixed">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <parent link="${prefix}link_6"/>
      <child  link="${prefix}flange"/>
    </joint>

    <link name="${prefix}tool0"/>
    <joint name="${prefix}link_6-tool0" type="fixed">
      <origin xyz="0 0 0" rpy="0 1.5708 0"/>
      <parent link="${prefix}flange"/>
      <child  link="${prefix}tool0"/>
    </joint>
  </xacro:macro>
</robot>

